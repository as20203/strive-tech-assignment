{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/routes": ["./routes"],
      "~/controllers": ["./controllers"],
      "~/utils": ["./utils"]
    },
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
